{
  "manifest_version": 3,
  "name": "KM Movies Quick Access",
  "version": "1.0",
  "description": "Open KM Movies or auto-search if site is down.",
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_title": "Open KM Movies"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
